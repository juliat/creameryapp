<% if logged_in? %>

	<%  # main div should have dash (short for dashboard) tag
	 content_for :main_html_id do %>
	  "dash"
	<% end %>
	
	<% if current_user.role == 'admin' %>
		<%= render :partial => 'admin' %>
	<% elsif current_user.role == 'manager' %>
		<%= render :partial => 'manager' %>
	<% elsif current_user.role == 'employee' %>
		<%= render :partial => 'employee' %>
	<% end %>
<% else %>
	<% 
	 # main div should have dash tag
	 content_for :main_html_id do %>
	  "public-home"
	<% end %>
	<%= render :partial => 'guest_homepage' %>
<% end %>
