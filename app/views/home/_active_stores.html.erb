<div class= "stores">
	<h2>Active Stores</h2>
	<% for store in @stores %>
		<div class="store">
			<h3><%= link_to(store.name + " Store", store_path(store)) %></h3>
			<p><strong><%= store.employees.size %></strong> Current Employees</p>
			<p><strong><%= store.shift_hours_worked %></strong> Shift Hours Worked in the Last 2 Weeks</p>
			<p><%= link_to "Assign Employee", new_employee_path, :class => "add employee"  %></p>
		</div>
	<% end %>
</div>
