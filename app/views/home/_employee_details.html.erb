<h2>Your Details</h2>
<table>
	<tr>
		<th>First Name</th>
		<td><%= @employee.first_name %></td>
	</tr>
	<tr>
		<th>Last Name</th>
		<td><%= @employee.last_name %></td>
	</tr>
	<tr>
		<th>Role</th>
		<td><%= @employee.role %></td>
	</tr>
	<tr>
		<th>Phone</th>
		<td><%= @employee.pretty_phone %></td>
	</tr>
	<tr>
		<th>Date of Birth</th>
		<td><%= @employee.date_of_birth.strftime("%m/%d/%y") %></td>
	</tr>
	<tr>
		<th>SSN</th>
		<td><%= @employee.ssn %></td>
	</tr>
</table>
