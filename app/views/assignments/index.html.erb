<h1>Current Assignments</h1>
<%= link_to "Create a New Assignment", new_assignment_path, :class => "add employee button"  %>
		<table class="display dataTable">
			<thead>
				<tr>
					<th>Store</th>
					<th>Employee</th>
					<th>Role</th>
					<th>Pay Level</th>
					<th>Start Date</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% for assignment in @current_assignments %>
				<tr>
					<td><%= link_to(assignment.store.name, store_path(assignment.store)) %></td>
					<td><%= link_to(assignment.employee.name, store_path(assignment.employee)) %></td>
					<td><%= assignment.employee.role.capitalize %></td>
					<td><%= assignment.pay_level %></td>
					<td><%= assignment.start_date.strftime("%m/%d/%Y")  %></td>
					<td><button value="end_assignment" class="end assignment button">End Assignment</button></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	
