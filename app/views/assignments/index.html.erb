<h1><%= image_tag('icons/icons_05.gif', :alt => "assignment icon") %>Current Assignments</h1>
<div class="page-buttons">
	<%= raw custom_button("assignment", "new", new_assignment_path, "New Assignment") %>
</div>
<table class="display dataTable">
	<thead>
		<tr>
			<th>Store</th>
			<th>Employee</th>
			<th>Role</th>
			<th>Pay Level</th>
			<th>Start Date</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% for assignment in @current_assignments %>
		<tr>
			<td><%= link_to(assignment.store.name, store_path(assignment.store)) %></td>
			<td><%= link_to(assignment.employee.name, employee_path(assignment.employee)) %></td>
			<td><%= assignment.employee.role.capitalize %></td>
			<td><%= assignment.pay_level %></td>
			<td><%= assignment.start_date.strftime("%m/%d/%Y")  %></td>
			<td>
				<%=  link_to("Details", assignment_path(assignment), :class => "details assignment button") %>
				<!-- <button value="end_assignment" class="end assignment button">End</button> -->
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h1><a href="#" rel="tooltip" title="Assignments which have ended">
	Past Assignments
	</a>
</h1>
	<table class="display dataTable">
		<thead>
			<tr>
				<th>Store</th>
				<th>Employee</th>
				<th>Role</th>
				<th>Pay Level</th>
				<th>Start Date</th>
				<th>End Date</th>
			</tr>
		</thead>
		<tbody>
			<% for assignment in @past_assignments %>
			<tr>
				<td><%= link_to(assignment.store.name, store_path(assignment.store)) %></td>
				<td><%= link_to(assignment.employee.name, employee_path(assignment.employee)) %></td>
				<td><%= assignment.employee.role.capitalize %></td>
				<td><%= assignment.pay_level %></td>
				<td><%= humanize_date(assignment.start_date)  %></td>
				<td><%= humanize_date(assignment.end_date) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

