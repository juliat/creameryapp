<%= simple_form_for @assignment, :html => { :class => 'form-horizontal' } do |f| %>
 <legend><%= controller.action_name.capitalize %> Assignment</legend>
    <fieldset>

	<%= f.association :store, :collection => Store.alphabetical, :prompt => "Select a store"%>

	<%= f.association :employee, :collection => Employee.alphabetical, :prompt => "Select an employee"%>

	<%= f.input :pay_level, :collection => 1..6, :prompt => "Select a pay level" %>

	<%= f.input :start_date, :label => "Start Date", :as => :date, :start_year => Date.today.year - 3,
						  :end_year => Date.today.year + 3,
						  :order => [:month, :day, :year],
						  :input_html => { :class => 'span1' } %>
						  
    	<%= f.input :end_date, :label => "End Date", :as => :date, :start_year => Date.today.year - 3,
						  :end_year => Date.today.year + 3,
						  :order => [:month, :day, :year],
						  :input_html => { :class => 'span1' } %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', employees_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
