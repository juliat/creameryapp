<h1><%=  link_to "#{@assignment.employee.proper_name}", employee_path(@assignment.employee) %> -
<%=  link_to "#{@assignment.store.name}", store_path(@assignment.store) %> </h1>
<table class="assignment_info">
		<tr>
			<th>Start Date</th>
			<td><%= @assignment.start_date.strftime("%m/%d/%Y")  %></td>
		</tr>
		<% if @assignment.end_date.nil? %>
		<tr>
			<th>End Date</th>
			<td>None. (This is the current assignment for <%=  @assignment.employee.proper_name %>)</td>
		</tr>
		<% else %>
		<tr>
			<th>End Date</th>
			<td><%= @assignment.end_date.strftime("%m/%d/%Y")  %></td>
		</tr>
		<% end %>
		<tr>
			<th>Pay Level</th>
			<td><%= @assignment.pay_level %></td>
		</tr>
</table>

  <%= link_to "View All Assignments", assignments_path %>
<a href=<%= edit_assignment_path(@assignment) %> class="edit">Edit Assignment Information</a>
 <%= link_to "Delete Assignment", @assignment, :confirm => 'Are you sure?', :method => :delete %>
