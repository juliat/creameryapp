<h1 class="page_label">Assignment Details</h1>
<div class="page-buttons">
	<%= raw custom_button("assignment", "edit", edit_assignment_path(@assignment), "Edit Assignment") %>
	<%= link_to "View All Assignments", assignments_path, :class => "view_all btn btn-large" %>
	<%= link_to "Delete Assignment", @assignment, 
		:confirm => 'Are you sure you want to delete this assignment?', 
		:method => :delete, :class => "delete btn btn-small btn-danger" %>
</div>
<table class="details">
		<tr>
			<th>Employee</th>
			<td><%=  link_to "#{@assignment.employee.name}", employee_path(@assignment.employee) %></td>
		</tr>
		<tr>
			<th>Store</th>
			<td><%=  link_to "#{@assignment.store.name}", store_path(@assignment.store) %></td>
		</tr>
		<tr>
			<th>Start Date</th>
			<td><%= @assignment.start_date.strftime("%m/%d/%y")  %></td>
		</tr>
		<% if @assignment.end_date.nil? %>
		<tr>
			<th>End Date</th>
			<td>None. (This is the current assignment for <%=  @assignment.employee.proper_name %>)</td>
		</tr>
		<% else %>
		<tr>
			<th>End Date</th>
			<td><%= @assignment.end_date.strftime("%m/%d/%y")  %></td>
		</tr>
		<% end %>
		<tr>
			<th>Pay Level</th>
			<td><%= @assignment.pay_level %></td>
		</tr>
</table>

