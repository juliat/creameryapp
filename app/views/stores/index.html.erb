<h1>Current Stores</h1>
<a href=<%= new_store_path %> class="btn btn-large add">
Add Store <%= image_tag('icons/icons_10.gif', :alt => "Add Store")%></a>
<table class="display dataTable">
	<thead>
		<tr>
			<th>Store Name</th>
			<th>Store Phone</th>
			<th>Staff Count</th>
		</tr>
	</thead>
	<tbody>
		<% for store in @stores  %>
		<tr>
			<td><%= link_to(store.name, store_path(store)) %></td>
			<td><%= store.pretty_phone %></td>
			<td><%= store.employees.size %></td>
		</tr>
		 <% end %>
	</tbody>
</table>
