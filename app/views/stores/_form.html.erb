<%= simple_form_for @store, :html => { :class => 'form-horizontal' } do |f| %>
 <legend><%= controller.action_name.capitalize %> Store</legend>
   <fieldset>
    <%= f.input :name %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state, :collection => Store::STATES_LIST %>
    <%= f.input :zip %>
    <%= f.input :phone %>
    <%= f.input :active %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', stores_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
