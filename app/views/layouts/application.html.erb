<!DOCTYPE html>
<html>
	<head>
	  <title>A&amp;M Creamery</title>
	
	<link rel="stylesheet/less" type="text/css" href="/stylesheets/application.less">
	<script src="http://lesscss.googlecode.com/files/less-1.3.0.min.js" type="text/javascript"></script>
	  
	  <%= stylesheet_link_tag "gmaps4rails"%> 
	  <%= javascript_include_tag "jquery", "jquery-ui", "jquery_ujs", "application", 
								 "dataTables/jquery.dataTables.min.js", "call-plugins.js", 
								 "jquery.isotope.min", "bootstrap-tooltip.js", "bootstrap-popover.js",
								 "nested_form" %> 
	  <%= csrf_meta_tags %>
	</head>
	
	<body>
		<%= yield :head %>
		<div id="header">
			<%= render :partial => "partials/navigation" %>	
			<%= render :partial => "partials/login_status" %>
		</div>
		<div id = "main-wrapper">
			<div id="main">
				<!-- show any flash messages -->
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
				<!-- show content -->
				<%= yield %>
			</div>
		</div>
		<div id = "footer-wrapper">
			<%=  render :partial  => "partials/footer" %>
		</div>
		<%= yield :scripts %>
	</body>
</html>
