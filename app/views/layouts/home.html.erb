<!-- this is not DRY. need to know how to conditionally change tag classes in html based
on which controller sent render request -->
<!DOCTYPE html>
<html>
	<head>
	  <title>A&amp;M Creamery</title>
 
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
  
	  <%= csrf_meta_tags %>
	</head>
	
	<body>
		<%= yield :head %>
		<div id="header">
			<%= render :partial => "partials/navigation" %>	
		</div>
		<div id="main-wrapper" class="container">
			<div id="dash" class="row">
				
				<% # show error messages
				  flash.each do |name, msg| %>
				  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
					<a class="close" data-dismiss="alert">Ã—</a>
					<%= msg %>
				  </div>
				<% end %>
				
				<!-- show content -->
				<%= yield %>
			</div>
		</div>
		<div id = "footer-wrapper" class="footer">
			<%=  render :partial  => "partials/footer" %>
		</div>
		<%= yield :scripts %>
	</body>
</html>
