<%= simple_form_for(@shift) do |f| %>
    <%= f.association :assignment, :prompt => "Assignment", :label_method => lambda{|label| label.store.name + " Store | " + label.employee.name} %>
    <%= f.input :start_time, :order => [:month, :day, :year] %>
    <%= f.input :end_time, :order => [:month, :day, :year] %>
    <%= f.input :notes %>
    <%= f.button :submit, :class => "create" %>
<% end %>
