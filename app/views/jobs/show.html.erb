<h1>Job Details</h1>
<div class="page-buttons">
	<%= raw custom_button("job", "edit", edit_job_path(@job), "Edit Job") %>
	<%= link_to "View All Jobs", jobs_path, :class => "btn btn-info" %>
	<%= link_to "Delete Job", @job, 
		:confirm => 'Are you sure you want to delete this job?', 
		:method => :delete, :class => "delete btn btn-danger btn-small" %>
</div>
<table class="table">
	<tr>
		<th>Active</th>
		<td><%= @job.active ? "yes" : "no" %></td>
	</tr>
	<tr>
		<th>Name</th>
		<td><%= @job.name %></td>
	</tr>
	<tr>
		<th>Description</th>
		<td><%= @job.description %></td>
	</tr>
</table>
